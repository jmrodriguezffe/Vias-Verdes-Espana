<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activity.MainActivity">

  <android.support.design.widget.TabLayout
    android:id="@+id/more_info__list__tablayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg__bottomview__item"
    android:minHeight="?attr/actionBarSize"
    app:tabIndicatorColor="@color/green_light"
    app:tabIndicatorHeight="6dp"
    app:layout_constraintTop_toTopOf="parent"
    app:tabTextColor="@color/white"
    app:tabSelectedTextColor="@color/green_light"/>

  <android.support.v4.view.ViewPager
    android:id="@+id/more_info__container__viewpager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/more_info__list__tablayout"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:background="#CCC"/>

</android.support.constraint.ConstraintLayout>