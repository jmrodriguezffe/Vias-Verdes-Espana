<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="UnderBase">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:colorBackground">@color/background</item>
  </style>

  <!--region General-->
  <style name="Text_Title">
    <item name="android:fontFamily">Roboto Condensed</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">@dimen/text_size__title</item>
  </style>

  <style name="Text_Normal">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">@dimen/text_size__normal</item>
  </style>

  <style name="Text_Small">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">@dimen/text_size__small</item>
  </style>
  <!--endregion-->

  <!--region Specific-->
  <style name="Text_Detail_Title">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#FFFFFFFF</item>
    <item name="android:textSize">20sp</item>
    <item name="android:paddingEnd">@dimen/margin__default</item>
    <item name="android:paddingTop">@dimen/margin__default</item>
    <item name="android:paddingBottom">@dimen/margin__default</item>
    <item name="android:paddingStart">70dp</item>
    <item name="android:background">#22000000</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text_Detail_Button">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#FFFFFFFF</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">true</item>
  </style>
  <style name="Text_Detail_Section">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#FF789E0C</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingStart">@dimen/margin__default</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!--endregion-->

</resources>
