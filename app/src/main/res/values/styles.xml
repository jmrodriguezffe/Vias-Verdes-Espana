<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="UnderBase">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:colorBackground">@color/background</item>
    <item name="android:textSize">?attr/text_size__normal</item>
  </style>

  <style name="AppTheme.TextSmall">
    <item name="text_size__title">16sp</item>
    <item name="text_size__medium">13sp</item>
    <item name="text_size__normal">11sp</item>
    <item name="text_size__small">9sp</item>
  </style>

  <style name="AppTheme.TextNormal">
    <item name="text_size__title">18sp</item>
    <item name="text_size__medium">15sp</item>
    <item name="text_size__normal">13sp</item>
    <item name="text_size__small">11sp</item>
  </style>

  <style name="AppTheme.TextBig">
    <item name="text_size__title">23sp</item>
    <item name="text_size__medium">20sp</item>
    <item name="text_size__normal">18sp</item>
    <item name="text_size__small">16sp</item>
  </style>

  <!--region General-->
  <style name="Text_Title">
    <item name="android:fontFamily">Roboto Condensed</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">?attr/text_size__title</item>
  </style>

  <style name="Text_Normal">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">?attr/text_size__normal</item>
  </style>

  <style name="Text_Small">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">?attr/text_size__small</item>
  </style>
  <!--endregion-->

  <!--region Specific-->
  <style name="Text_Detail_Title">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#FFFFFFFF</item>
    <item name="android:textSize">18sp</item>
    <item name="android:paddingEnd">@dimen/margin__default</item>
    <item name="android:paddingTop">@dimen/margin__default</item>
    <item name="android:paddingBottom">@dimen/margin__default</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text_Detail_Button">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#FFFFFFFF</item>
    <item name="android:textSize">?attr/text_size__medium</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">true</item>
  </style>
  <style name="Text_Detail_Section">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#FF789E0C</item>
    <item name="android:textSize">?attr/text_size__medium</item>
    <item name="android:paddingStart">@dimen/margin__default</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text_Info_Title">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">?attr/text_size__medium</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:paddingStart">@dimen/margin__default</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text_Green_Button">
    <item name="android:fontFamily">Roboto</item>
    <item name="android:textColor">#FFFFFFFF</item>
    <item name="android:textSize">?attr/text_size__medium</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:padding">@dimen/margin__default</item>
    <item name="android:background">@drawable/bg__primary__rounded</item>
  </style>
  <!--endregion-->

</resources>
